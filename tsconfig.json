{
  "compilerOptions": {
    "target": "ES2020", // Specify ECMAScript target version
    "module": "ESNext", // Use ECMAScript modules
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in file names
    "moduleResolution": "node",                // Use Node.js module resolution strategy
    "resolveJsonModule": true,                 // Include modules imported with .json extension
    "isolatedModules": true,                   // Ensure each file can be safely transpiled without relying on other imports
    "strictNullChecks": true,                  // Enable strict null checks
    "noImplicitAny": true,                      // Raise error on expressions and declarations with an implied 'any' type
    "allowSyntheticDefaultImports": true,       // Allow default imports from modules with no default export
    // "strict": true,
    // "moduleResolution": "node",
    // "esModuleInterop": true
  },
  // "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "include": ["index.d.ts", "src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}